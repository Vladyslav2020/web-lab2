{
    "name": "lab2",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "config": "^3.3.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "nodemailer": "^6.7.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start-server": "node ./server/index",
        "start": "concurrently --kill-others \"npm run start-server\" \"react-scripts start\"",
        "build": "react-scripts build",
        "lint": "eslint **/*.js --ignore-path .gitignore",
        "lint:fix": "eslint **/*.js --fix --ignore-path .gitignore",
        "format": "prettier --check . --ignore-path ./.prettierignore",
        "format:fix": "prettier --write . --ignore-path ./.prettierignore",
        "stylelint": "stylelint **/*.css --ignore-path .gitignore",
        "stylelint:fix": "stylelint **/*.css --fix --ignore-path .gitignore",
        "prepare": "husky install"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.3",
        "@nodeart/eslint-plugin": "^1.4.0",
        "concurrently": "^6.4.0",
        "eslint": "^7.11.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "prettier": "^2.4.1",
        "sonarjs": "^1.0.0",
        "stylelint": "^14.0.1",
        "stylelint-config-standard": "^23.0.0"
    },
    "engines": {
        "node": "14.x"
    }
}
