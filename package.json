{
    "name": "lab2",
    "version": "1.0.0",
    "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
    "main": "index.js",
    "scripts": {
        "start": "npm run start-server",
        "start-server": "node index",
        "start-client": "cd client && npm run start",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint \"**/*.js\" --ignore-path .gitignore",
        "lint:fix": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
        "format": "prettier --check . --ignore-path .gitignore",
        "format:fix": "prettier --write . --ignore-path .gitignore",
        "stylelint": "stylelint \"**/*.css\" --ignore-path .gitignore",
        "stylelint:fix": "stylelint \"**/*.css\" --fix --ignore-path .gitignore",
        "prepare": "husky install",
        "heroku-postbuild": "cd client && npm install && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Vladyslav2020/web-lab2.git"
    },
    "author": "Vlad",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Vladyslav2020/web-lab2/issues"
    },
    "homepage": "https://github.com/Vladyslav2020/web-lab2#readme",
    "dependencies": {
        "config": "^3.3.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-sonarjs": "^0.11.0",
        "jest": "^27.4.3",
        "nodemailer": "^6.7.0",
        "sanitize-html": "^2.6.0"
    },
    "devDependencies": {
        "concurrently": "^6.4.0",
        "eslint": "^8.6.0",
        "eslint-plugin-jest": "^25.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "prettier": "^2.4.1",
        "sonarjs": "^1.0.0",
        "stylelint": "^14.0.1",
        "stylelint-config-standard": "^23.0.0"
    },
    "engines": {
        "node": "16.x"
    }
}
